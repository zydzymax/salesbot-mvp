# AmoCRM Configuration
AMOCRM_SUBDOMAIN=your-subdomain
AMOCRM_CLIENT_ID=your-client-id
AMOCRM_CLIENT_SECRET=your-client-secret
AMOCRM_REDIRECT_URI=https://your-domain.com/auth/callback
AMOCRM_ACCESS_TOKEN=your-access-token
AMOCRM_REFRESH_TOKEN=your-refresh-token

# OpenAI Configuration (will be added later)
OPENAI_API_KEY=your-openai-key

# Telegram Bot (will be added later)
TELEGRAM_BOT_TOKEN=your-bot-token

# Database
DATABASE_URL=sqlite+aiosqlite:///./salesbot.db

# Redis
REDIS_URL=redis://127.0.0.1:6379/0

# Security
SECRET_KEY=your-super-secret-jwt-key
ENCRYPTION_KEY=your-32-char-encryption-key

# Application Settings
MAX_CALLS_PER_DAY=50
MAX_AUDIO_DURATION_SECONDS=300
CACHE_TTL_SECONDS=86400
MAX_WORKERS=2
MAX_QUEUE_SIZE=100

# API Settings
API_RATE_LIMIT=10
AMOCRM_RATE_LIMIT=7

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Paths
AUDIO_STORAGE_PATH=/tmp/salesbot/audio
LOG_PATH=/var/log/salesbot