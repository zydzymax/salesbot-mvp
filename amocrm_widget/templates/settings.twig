<div class="salesbot-settings">
    <div style="text-align: center; margin-bottom: 25px;">
        <h2 style="margin: 0; color: #4c8bf5;">Sales Whisper</h2>
        <p style="color: #999; margin: 5px 0 0;">{{ widget.langs.settings_subtitle }}</p>
    </div>

    <div class="form-group">
        <label for="api_url">{{ widget.langs.settings.api_url }}</label>
        <input type="text"
               name="api_url"
               id="api_url"
               value="{{ api_url }}"
               placeholder="https://saleswhisper.pro/api">
        <div class="help-text">{{ widget.langs.settings.api_url_help }}</div>
    </div>

    <div class="form-group">
        <label for="api_key">{{ widget.langs.settings.api_key }}</label>
        <input type="text"
               name="api_key"
               id="api_key"
               value="{{ api_key }}"
               placeholder="your-api-key-here">
        <div class="help-text">{{ widget.langs.settings.api_key_help }}</div>
    </div>

    <div class="test-connection">
        <button type="button" class="test-btn js-salesbot-test-connection">
            &#128268; {{ widget.langs.settings.test_connection }}
        </button>
        <span class="connection-status js-connection-status"></span>
    </div>

    {% if status == 'error' %}
    <div style="margin-top: 20px; padding: 15px; background: #ffebee; border-radius: 4px; color: #c62828;">
        &#9888; {{ widget.langs.settings.connection_error }}
    </div>
    {% elseif status == 'installed' %}
    <div style="margin-top: 20px; padding: 15px; background: #e8f5e9; border-radius: 4px; color: #2e7d32;">
        &#10004; {{ widget.langs.settings.connected }}
    </div>
    {% endif %}

    <div style="margin-top: 30px; padding-top: 20px; border-top: 1px solid #e1e1e1;">
        <h4 style="margin: 0 0 15px; color: #666;">{{ widget.langs.features_title }}</h4>
        <ul style="margin: 0; padding: 0 0 0 20px; color: #666; font-size: 13px; line-height: 1.8;">
            <li>{{ widget.langs.feature_1 }}</li>
            <li>{{ widget.langs.feature_2 }}</li>
            <li>{{ widget.langs.feature_3 }}</li>
            <li>{{ widget.langs.feature_4 }}</li>
            <li>{{ widget.langs.feature_5 }}</li>
        </ul>
    </div>

    <div style="margin-top: 20px; text-align: center;">
        <a href="https://saleswhisper.pro/docs" target="_blank" style="color: #4c8bf5; font-size: 13px;">
            {{ widget.langs.documentation }} &#8594;
        </a>
    </div>
</div>
